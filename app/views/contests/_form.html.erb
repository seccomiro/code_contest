
<%= simple_form_for @contest do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :organizer %>
    <%= f.input :starts_at %>
    <%= f.input :finishes_at %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Contest' : 'Atualizar Contest', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
