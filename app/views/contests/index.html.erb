<% content_for :title do %>
  Contests
<% end %>

<div class="page-header">
  <h1>Contests</h1>
  <%= link_to new_contest_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    New Contest
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Organizer</th>
        <th>Starts at</th>
        <th>Finishes at</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contests.each do |contest| %>
        <tr>
          <td><%= contest.name %></td>
          <td><%= contest.organizer %></td>
          <td><%= contest.starts_at %></td>
          <td><%= contest.finishes_at %></td>
          <td><%= contest.user %></td>
          <td>
            <%= link_to contest, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_contest_path(contest), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to contest, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>