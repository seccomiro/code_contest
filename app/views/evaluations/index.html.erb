<% content_for :title do %>
  Evaluations
<% end %>

<div class="page-header">
  <h1>Evaluations</h1>
  <%= link_to new_evaluation_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    New Evaluation
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Submission</th>
        <th>Judge</th>
        <th>Result</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @evaluations.each do |evaluation| %>
        <tr>
          <td><%= evaluation.submission %></td>
          <td><%= evaluation.judge %></td>
          <td><%= evaluation.result %></td>
          <td>
            <%= link_to evaluation, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_evaluation_path(evaluation), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to evaluation, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>