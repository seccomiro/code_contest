<% content_for :title do %>
  Details of Judge
<% end %>

<div class="page-header">
  <h1>Details of Judge</h1>
  <div>
    <%= link_to edit_judge_path(@judge), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Edit
    <% end %>
    <%= link_to judges_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Back
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @judge.name %></dd>

  <dt>User:</dt>
  <dd><%= @judge.user %></dd>

  <dt>Contest:</dt>
  <dd><%= @judge.contest %></dd>

</dl>
