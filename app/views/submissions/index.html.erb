<% content_for :title do %>
  Submissions
<% end %>

<div class="page-header">
  <h1>Submissions</h1>
  <%= link_to new_submission_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    New Submission
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Question</th>
        <th>Team</th>
        <th>Code</th>
        <th>Language</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @submissions.each do |submission| %>
        <tr>
          <td><%= submission.question %></td>
          <td><%= submission.team %></td>
          <td><%= submission.code %></td>
          <td><%= submission.language %></td>
          <td>
            <%= link_to submission, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_submission_path(submission), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to submission, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>