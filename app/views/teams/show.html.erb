<% content_for :title do %>
  Details of Team
<% end %>

<div class="page-header">
  <h1>Details of Team</h1>
  <div>
    <%= link_to edit_team_path(@team), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Edit
    <% end %>
    <%= link_to teams_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Back
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @team.name %></dd>

  <dt>User:</dt>
  <dd><%= @team.user %></dd>

</dl>
